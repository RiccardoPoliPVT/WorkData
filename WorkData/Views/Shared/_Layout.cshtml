<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkData</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkData.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
            <div class="container-fluid">
                <div class="d-flex w-100 justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-1 bg-secondary w-auto p-3 rounded-5 m-3" style="height:77vh;">
                <div class="d-flex flex-sm-column flex-row flex-nowrap bg-secondary align-items-start h-100 sticky-top">
                    @*SCOMMENTARE SE SI VUOLE AGGIUNGERE UN LOGO*@
                    @*                     <a href="/" class="d-block p-3 link-dark text-decoration-none" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Icon-only">
                        <i class="bi-bootstrap fs-1 text-white"></i>
                    </a> *@
                    <ul class="nav nav-pills nav-flush flex-sm-column flex-row flex-nowrap mb-auto">
                        <li class="nav-item">
                            <a class="nav-link py-3 px-2 text-white d-flex align-items-center" asp-area="" asp-controller="Declaration" asp-action="Index" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Timbra">
                                <span class="material-symbols-outlined p-1">speed</span> Timbra
                            </a>
                        </li>
                    </ul>
                    <div class="bg-secondary">
                        <a class="nav-link py-3 px-2 text-white d-flex align-items-center" asp-area="" asp-controller="Setting" asp-action="Index" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Impostazioni">
                            <span class="material-symbols-outlined p-1">settings</span> Impostazioni
                        </a>
                    </div>

                </div>
            </div>

            <div class="col-md-9 col-lg-10 p-3">
                <main role="main" class="pb-3">
                    <partial name="_Notification" />
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WorkData - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@page
@model RegisterModel

@{
    ViewData["Title"] = "Registrati";
    Layout = "_LoginLayout";
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow" style="max-width: 450px; width: 100%;">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                @* NAME *@
                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" placeholder="Name" />
                    <label asp-for="Input.Name">Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                @* SURNAME *@
                <div class="form-floating mb-3">
                    <input asp-for="Input.Surname" class="form-control" autocomplete="username" aria-required="true" placeholder="Surname" />
                    <label asp-for="Input.Surname">Surname</label>
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>

                @* NICKNAME *@
                <div class="form-floating mb-3">
                    <input asp-for="Input.Nickname" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                    <label asp-for="Input.Nickname">Username</label>
                    <span asp-validation-for="Input.Nickname" class="text-danger"></span>
                </div>

                @* BIRTH DATE *@
                <div class="form-floating mb-3">
                    <input asp-for="Input.BirthDate" class="form-control" autocomplete="username" aria-required="true" placeholder="gg/MM/yyyy" />
                    <label asp-for="Input.BirthDate">Birth Date</label>
                    <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                </div>

                @* EMAIL *@
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                @* PASSWORD *@
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                @* CONFERMA PASSWORD *@
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Conferma Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Registrati</button>
            </form>
            <div class="text-center">
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Hai già un account? Accedi.</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}